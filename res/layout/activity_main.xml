<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login to server" />

	<EditText
	    android:id="@+id/etPort"
	    android:layout_width="34dp"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/etIP"
	    android:layout_alignBottom="@+id/etIP"
	    android:layout_alignParentRight="true"
	    android:layout_toRightOf="@+id/etIP"
	    android:hint="port"
	    android:text="800"
	    android:inputType="textPhonetic"
	    android:ems="10" />

	<EditText
	    android:id="@+id/etIP"
	    android:layout_width="242dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/login"
	    android:hint="Ip"
	    android:text="192.168.1.121"
	    android:ems="10" />

	<EditText
	    android:id="@+id/etusername"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/etPort"
	    android:layout_marginTop="24dp"
	    android:ems="10"
	    android:text="bob"
	    android:hint="username" >

	    <requestFocus />
	</EditText>

	<EditText
	    android:id="@+id/etpassword"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/etusername"
	    android:layout_marginTop="18dp"
	    android:hint="Password"
	    android:ems="10"
	    android:text="frank"
	    android:inputType="textPassword" />

	<CheckBox
	    android:id="@+id/checkBoxsavedata"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/etpassword"
	    android:text="Save info" />

	<Spinner
	    android:id="@+id/connection_protocol"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/checkBoxsavedata" />
	
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/getContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Get Content" />

    <Button
        android:id="@+id/uploads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Upload file to ftp" />

    <Button
        android:id="@+id/disconnectstp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Disconnect" />

    <ListView
        android:id="@+id/contentLists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/disconnectstp"
        android:layout_below="@+id/getContents" >

    </ListView>

</RelativeLayout>